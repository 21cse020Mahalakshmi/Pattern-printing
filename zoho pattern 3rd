
public class Main
{
	public static void main(String[] args) {
		int n=5;
		for(int i=1;i<=5;i++)
		{
		    for(int j=1;j<=2*n-1;j++)
		    {
		        if(i<=n-j||j-i>=n)
		        {
		            System.out.print(" ");
		        }
		        else{
		            int diff=n-j;
		            if(diff<0)
		            {
		               diff=diff*-1; 
		            }
		            System.out.print(diff);
		        }
		    }
		    System.out.println();
		}
	}
}
