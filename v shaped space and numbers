public class Main
{
	public static void main(String[] args) {
		int i,j,s,k;
		for(i=1;i<=4;i++){
		    for(j=1;j<=i;j++){
		        System.out.print(j);
		    }
		    for(s=1;s<=2*4-2*i;s++){
		        System.out.print(" ");
		    }
		    for(k=i;k>=1;k--)
		    {
		       System.out.print(k);  
		    }
		    System.out.println();
		}
	}
}
